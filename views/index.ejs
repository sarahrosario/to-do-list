<%- include('partials/header.ejs') %>
    
    <div class="container">
        <div class="today">
            <img src="image/sticky-note.png" alt="stickyNote_img">
            <h5> <%= week %></h5>
            <p><%= dateTime %></p>
        </div>
        
        
            <div class="row">
                <div class="col-md-4 offset-md-4 column1">
                    <div class="add-control">
                        <form class="d-flex " role="text" action="/add?list=<%= currentList%>", method="post" >
                            <input class="form-control me-2 addForm" type="text" id="newTask" name="newTask" placeholder="‚úçüèª Add task..." aria-label="Add" required>
                            <button class="btn btn-outline-success" type="submit">Add</button>
                        </form> 
                    </div>
                    <% if ( locals.listOfToday.length !==0 ) { %>               
                    <ul class="list-group list">
                        <% for (let x in listOfToday) { %>
                        <li class="list-group-item item<%= x %> item">
                                <input class="form-check-input checkBox" type="checkbox" id="task<%= x %>" name="chk" onclick="crossOff(<%= x %>)"> 
                                <label class="form-check-label checkBox-text" for="task<%= x %>" > <%= listOfToday[x] %></label>
                        </li>
                        <% } %> 
                    </ul>
                    <% }else{ %>
                    <p>You have no task today, start adding now ‚òùÔ∏è !</p>    
                    <% } %>
                </div>
            </div>   
    </div>

<%- include('partials/footer.ejs') %>